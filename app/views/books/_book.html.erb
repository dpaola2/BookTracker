<div id="<%= dom_id book %>">
  <p>
    <strong>Title:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= book.author %>
  </p>

  <p>
    <strong>Isbn:</strong>
    <%= book.isbn %>
  </p>

  <p>
    <strong>Shelf:</strong>
    <% if book.shelf.present? %>
      <%= book.shelf.name %>
    <% else %>
      <em>None</em>
    <% end %>
  </p>

</div>
