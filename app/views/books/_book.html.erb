<div id="<%= dom_id book %>">
  <div class="row mt-3">
    <div class="col">
      <% if book.image.attached? %>
        <%= image_tag book.image, class: "img-thumbnail", style: "width: 150px;" %>
      <% end %>
      <h3><%= book.title %></h3>
      <p>
        <strong>Author:</strong>
        <%= book.author %>
      </p>

      <p>
        <strong>Isbn:</strong>
        <%= book.isbn %>
      </p>

      <p>
        <strong>Shelf:</strong>
        <% if book.shelf.present? %>
          <%= link_to book.shelf.name, shelf_path(book.shelf) %>
        <% else %>
          <em>None</em>
        <% end %>
      </p>
    </div>
  </div>
</div>
